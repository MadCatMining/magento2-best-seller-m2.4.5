<?xml version="1.0" encoding="UTF-8"?>
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
	<widget id="emizentech_bestsellerwidget" class="Emizentech\Bestsellerwidget\Block\Widget\Bestsellerdproduct">
		<label translate="true">Bestseller Product Widget</label>
		<description>Emizentech Bestseller Product Widget with Carousel Support</description>
		<parameters>
			<parameter name="productcount" xsi:type="text" visible="true" sort_order="1">
				<label translate="true">Product Count</label>
				<description translate="true">Total number of bestseller products to fetch</description>
				<value>10</value>
			</parameter>
			<parameter name="imagewidth" xsi:type="text" visible="true" sort_order="2">
				<label translate="true">Image Width</label>
				<description translate="true">Product image width in pixels</description>
				<value>150</value>
			</parameter>
			<parameter name="imageheight" xsi:type="text" visible="true" sort_order="3">
				<label translate="true">Image Height</label>
				<description translate="true">Product image height in pixels</description>
				<value>150</value>
			</parameter>
			<parameter name="enable_carousel" xsi:type="select" visible="true" sort_order="4" source_model="Magento\Config\Model\Config\Source\Yesno">
				<label translate="true">Enable Carousel Mode</label>
				<description translate="true">Switch between static grid and auto-scrolling carousel</description>
				<value>0</value>
			</parameter>
			<parameter name="products_per_slide" xsi:type="text" visible="true" sort_order="5">
				<label translate="true">Products Per Slide</label>
				<description translate="true">Number of products to display per carousel slide</description>
				<value>4</value>
				<depends>
					<parameter name="enable_carousel" value="1"/>
				</depends>
			</parameter>
			<parameter name="autoplay_speed" xsi:type="text" visible="true" sort_order="6">
				<label translate="true">Autoplay Speed (ms)</label>
				<description translate="true">Carousel auto-scroll speed in milliseconds (e.g., 3000 = 3 seconds)</description>
				<value>3000</value>
				<depends>
					<parameter name="enable_carousel" value="1"/>
				</depends>
			</parameter>
			<parameter name="period" xsi:type="select" visible="true" sort_order="7">
				<label translate="true">Bestseller Period</label>
				<description translate="true">Select time period for bestseller calculation</description>
				<value>monthly</value>
				<options>
					<option name="daily" value="daily">
						<label translate="true">Daily</label>
					</option>
					<option name="monthly" value="monthly">
						<label translate="true">Monthly</label>
					</option>
					<option name="yearly" value="yearly">
						<label translate="true">Yearly</label>
					</option>
				</options>
			</parameter>
		</parameters>
	</widget>
</widgets>